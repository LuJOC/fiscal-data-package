{
  "name": "my-openspending-datapackage",
  "title": "My OpenSpending Data Package",
  "resources": [
    {
      "name": "budget",
      "title": "Budget",
      "path": "budget.csv",
      "schema": {
        "fields": [
          {
            "name": "expenditure",
            "type": "number",
            "format": "currency"
          },
          {
            "name": "year",
            "type": "date"
          }
        ]
      }
    }
  ],
  "mapping": {
    "measures": [
      {
        "name": "amount",
        "source": "expenditure",
        "currency": "USD",
        "factor": 1
      }
    ],
    "dimensions": [
      {
        "name': "date",
        "fields": [
          {
            "name": "year",
            "source": "year"
          }
        ]
      }
    ]
  }
}

